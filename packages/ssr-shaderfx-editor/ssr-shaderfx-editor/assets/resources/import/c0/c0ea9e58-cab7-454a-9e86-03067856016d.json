[1,0,0,[["cc.JsonAsset",["_name","json"],1]],[[0,0,1,3]],[[0,"UVPolar",{"name":"UVPolar","name_zh":"极坐标","version":"1.0","description":{"en":"Converts the input value UV to polar coordinates.","zh":"将输入的纹理坐标转换为极坐标。"},"tags":["Core","UV "],"input":[{"type":"vec2","name":"UV","info":{"en":"UV input value","zh":"UV 输入值"}},{"type":"vec2","name":"Center","info":{"en":"Center reference point","zh":"中心点"}},{"type":"float","name":"RadialScale","info":{"en":"Scale of angle value","zh":"角度缩放"}},{"type":"float","name":"LengthScale","info":{"en":"Scale of distance value","zh":"距离缩放"}}],"output":[{"type":"vec2","name":"UV"},{"type":"float","name":"x","property":"x"},{"type":"float","name":"y","property":"y"}],"uniforms":{},"frags":{},"main":["vec2 main (vec2 UV, vec2 Center, float RadialScale, float LengthScale) {","    vec2 delta = UV - Center;","    float radius = length(delta) * 2.0 * RadialScale;","    float angle = atan(delta.y, delta.x) * 1.0 / 6.28 * LengthScale;","    return vec2(radius, angle);","}"]}]],0,0,[],[],[]]